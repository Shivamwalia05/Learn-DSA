class Solution {
  public:
    int largest(vector<int> &arr) {
        
        // sizr of the array
        int n=arr.size();
        int maxi=INT_MIN; // maxi = any small number 
        for(int i=0;i<n;i++)
        {
            maxi=max(maxi,arr[i]); // max is predefine and this loop iterate entire array and max get largest element.
        }
        
        return maxi;
    }
};
